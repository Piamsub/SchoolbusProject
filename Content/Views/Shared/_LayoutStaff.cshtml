<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/wwwroot/libs/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/wwwroot/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/wwwroot/css/Navcss.css" rel="stylesheet" />
    <title>@ViewBag.Title | School Bus Service Management System</title>

    <script src="~/wwwroot/libs/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/wwwroot/libs/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/wwwroot/libs/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/wwwroot/libs/jquery-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/wwwroot/libs/jquery-unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/wwwroot/libs/popper/popper.min.js"></script>
    <script src="~/wwwroot/libs/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/wwwroot/libs/angularjs/angular.min.js"></script>
    <script src="~/wwwroot/libs/angularjs/angular-resource.min.js"></script>
    <script src="~/wwwroot/libs/angularjs/angular-route.min.js"></script>
    <script src="~/wwwroot/libs/angularjs/angular-cookies.min.js"></script>
    <script src="~/wwwroot/libs/angularjs/angular-animate.min.js"></script>

    <script src="~/wwwroot/app/angular.module.js"></script>

    <script>
        angular.module('main').constant("constants", {
            "BaseUrl": "@Url.Content("~")"
        });
    </script>

    <script src="~/wwwroot/app/angular-configurations.js"></script>
    <script src="~/wwwroot/app/route.js"></script>

    <script src="~/wwwroot/app/controllers/baseController.js"></script>
    <script src="~/wwwroot/app/services/rootService.js"></script>
    <script src="~/wwwroot/app/controllers/rootController.js"></script>

    @RenderSection("scripts", required: false)
</head>
<body ng-app="main" ng-controller="rootController" ng-init="initialize()">
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#"><img src="~/wwwroot/img/brand/Logo-Recovered.png" width="auto" height="40" class="logo" /><span class="sr-only">(current)</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item ">
                    <a class="nav-link" href="#">ตำแหน่งรถ</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        บันทึกการรับส่ง
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">นักเรียนวันนี้</a>
                        <a class="dropdown-item" href="#">รอบเช้า</a>
                        <a class="dropdown-item" href="#">รอบเย็น</a>
                    </div>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">ประวัติการรับส่ง</a>
                </li>
                <li class="nav-item dropdown ">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown link
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    @RenderBody()
</body>

</html>
<style>
    html, body {
        background-image: url('../wwwroot/img/BG-SMS.jpg');
        font-family: 'FC lamoon';
        background-position: center;
        background-size: cover;
    }
</style>