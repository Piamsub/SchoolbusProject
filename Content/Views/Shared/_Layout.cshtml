<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/wwwroot/libs/jquery-ui/jquery-ui.min.css" rel="stylesheet" />

    <link href="~/wwwroot/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <title>@ViewBag.Title - My ASP.NET Application</title>

    <script src="~/wwwroot/libs/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/wwwroot/libs/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/wwwroot/libs/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/wwwroot/libs/jquery-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/wwwroot/libs/jquery-unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/wwwroot/libs/popper/popper.min.js"></script>
    <script src="~/wwwroot/libs/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/wwwroot/libs/angularjs/angular.min.js"></script>
    <script src="~/wwwroot/libs/angularjs/angular-resource.min.js"></script>
    <script src="~/wwwroot/libs/angularjs/angular-route.min.js"></script>
    <script src="~/wwwroot/libs/angularjs/angular-cookies.min.js"></script>
    <script src="~/wwwroot/libs/angularjs/angular-animate.min.js"></script>

    <script src="~/wwwroot/app/angular.module.js"></script>

    <script>
        angular.module('main').constant("constants", {
            "BaseUrl": "@Url.Content("~")"
        });
    </script>

    <script src="~/wwwroot/app/angular-configurations.js"></script>
    <script src="~/wwwroot/app/route.js"></script>

    <script src="~/wwwroot/app/controllers/baseController.js"></script>
    <script src="~/wwwroot/app/services/rootService.js"></script>
    <script src="~/wwwroot/app/controllers/rootController.js"></script>

    @RenderSection("scripts", required: false)
</head>
<body ng-app="main" ng-controller="rootController" ng-init="initialize()">
    @RenderBody()
</body>
</html>
